# Domain Configuration
DOMAIN=local  # Change to your domain (e.g., example.com)

# Traefik
TRAEFIK_ADMIN_AUTH=admin:$$apr1$$abc123$$  # Generate with: htpasswd -nb admin password
CF_DNS_API_TOKEN=  # Cloudflare API token for DNS challenge (optional)

# Nextcloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=change_me_strong_password
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_DB=nextcloud
POSTGRES_USER=nextcloud

# Gitea
GITEA_ADMIN_USER=admin
GITEA_ADMIN_PASSWORD=change_me_strong_password
GITEA_ADMIN_EMAIL=admin@example.com

# Grafana
GRAFANA_ADMIN_PASSWORD=change_me_strong_password

# WireGuard
WIREGUARD_PEERS=2  # Number of VPN clients
WIREGUARD_SERVERPORT=51820

# Timezone
TZ=Asia/Seoul
